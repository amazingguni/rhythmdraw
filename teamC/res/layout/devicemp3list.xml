<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="40dip"
	android:padding="5dip"
	android:background="#ffffff">	
	<TextView 
		android:id="@+id/MP3text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textColor="#000000" 
		android:textSize="12sp"
		android:layout_centerVertical="true"
		android:ellipsize="marquee"
        android:singleLine="true"
		/>

	<LinearLayout
	    android:layout_width="250px"
	    android:layout_height="match_parent"
	    android:layout_alignParentRight="true"
	    android:layout_alignTop="@+id/MP3text" 
	    android:layout_marginTop="-10px">

	    <ImageView
	        android:id="@+id/blue_star0"
	        android:layout_width="25px"
	        android:layout_height="25px"
	        android:layout_marginRight="4px"
	        android:src="@drawable/blue_star_full_icon" />

	    <ImageView
	        android:id="@+id/blue_star1"
	        android:layout_width="25px"
	        android:layout_height="25px"
	        android:layout_marginRight="4px"
	        android:src="@drawable/blue_star_full_icon" />

	    <ImageView
	        android:id="@+id/blue_star2"
	        android:layout_width="25px"
	        android:layout_height="25px"
	        android:layout_marginRight="4px"
	        android:src="@drawable/blue_star_full_icon" />

	    <ImageView
	        android:id="@+id/blue_star3"
	        android:layout_width="25px"
	        android:layout_height="25px"
	        android:layout_marginRight="4px"
	        android:src="@drawable/blue_star_half_icon" />

	    <ImageView
	        android:id="@+id/blue_star4"
	        android:layout_width="25px"
	        android:layout_height="25px"
	        android:src="@drawable/blue_star_empty_icon" />
	</LinearLayout>

</RelativeLayout>