<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selectmusic_bg_layout"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/music_select_bg">	
    <LinearLayout 
    android:id="@+id/musicinfo_layout"
	android:orientation="vertical"
	android:layout_width="570px"
	android:layout_marginTop="191px"
	android:layout_height="fill_parent"
	>
		<LinearLayout 
    		android:id="@+id/jacket_layout" android:orientation="horizontal"
    		android:layout_width="fill_parent" 	android:layout_height="fill_parent"
    		
    		android:layout_marginLeft="38px">

			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:orientation="vertical" >

				<ImageView
				    android:id="@+id/jacket_img"
				    android:layout_width="278px"
				    android:layout_height="280px" />

				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="18px" >

					<ImageView
					    android:id="@+id/yellow_star0"
					    android:layout_width="40px"
					    android:layout_height="40px"
					    android:layout_marginRight="5px"
					    android:src="@drawable/yellow_star_full_icon" />

					<ImageView
					    android:id="@+id/yellow_star1"
					    android:layout_width="40px"
					    android:layout_height="40px"
					    android:layout_marginRight="5px"
					    android:src="@drawable/yellow_star_full_icon" />

					<ImageView
					    android:id="@+id/yellow_star2"
					    android:layout_width="40px"
					    android:layout_height="40px"
					    android:layout_marginRight="5px"
					    android:src="@drawable/yellow_star_full_icon" />

					<ImageView
					    android:id="@+id/yellow_star3"
					    android:layout_width="40px"
					    android:layout_height="40px"
					    android:layout_marginRight="5px"
					    android:src="@drawable/yellow_star_half_icon" />

					<ImageView
					    android:id="@+id/yellow_star4"
					    android:layout_width="40px"
					    android:layout_height="40px"
					    android:layout_marginRight="5px"
					    android:src="@drawable/yellow_star_empty_icon" />

				</LinearLayout>

				<TextView
				    android:id="@+id/album_info_txt"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginTop = "10px"
				    android:textColor="#222222"
				    android:text="Large Text"
				    android:textAppearance="?android:attr/textAppearanceLarge" />

			</LinearLayout>   
			<LinearLayout 
    		android:id="@+id/isregistered_layout" android:orientation="vertical"
    		android:layout_width="fill_parent" 	android:layout_height="fill_parent"
    		android:layout_marginLeft="28px"
    		android:layout_marginTop="109px">
    			<TextView 
					android:id="@+id/isRegisterdText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:textColor="#000000" 
					android:textSize="16sp"
					android:layout_marginBottom="24px"
				/>
    			<ImageView
    				android:id="@+id/playBtn"			
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
				/>			
			</LinearLayout>	 
			</LinearLayout>	
		<LinearLayout 
    		android:id="@+id/level_layout" android:orientation="horizontal"
    		android:layout_width="fill_parent" 	android:layout_height="fill_parent">
    	</LinearLayout>	
    	<TextView 
			android:id="@+id/musicInfoText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textColor="#000000" 
			android:textSize="16sp"
		/>	
		</LinearLayout>		
			
			<ListView
			    android:layout_marginTop="156px"
        		android:id="@+id/device_musiclist"
        		android:layout_height="fill_parent"
        		android:layout_width="700px"     		
        		android:layout_marginLeft="10px"
        		android:padding="5dip"        		        		        		
        		android:scrollbarSize="0px"
        		android:divider="#d0c0a8"
        		android:dividerHeight="3px"
        		android:background="#00000000"
        		/>
		
		</LinearLayout>	  	  
